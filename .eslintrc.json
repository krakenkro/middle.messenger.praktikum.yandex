{
    "root": true,
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
        "@typescript-eslint/no-unused-vars": 2,
        "max-len": "off",
        "no-tabs": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "import/no-extraneous-dependencies": "off",
        "indent": [
            "warn",
            "tab",
            {
             "SwitchCase": 1,
             "MemberExpression": 1,
             "ObjectExpression": 1
            }
        ]
    }
}
